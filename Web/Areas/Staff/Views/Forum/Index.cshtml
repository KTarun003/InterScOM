@model IEnumerable<Domain.Query>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12 text-center text-uppercase font-weight-bolder" style=" color: #817F82">
        <h1>
            Forum
        </h1>
    </div>
</div>

<br />
<div class="row">
    <h5 class="col-12 text-center">Help the Parents by Answering these Questions</h5>
</div>


<ul style="list-style-type:none;">
    @foreach (var item in Model)
    {

        <li  style="padding: 10px">
            <div class="card">
                <div class="card-header font-weight-bold">
                  Topic : @Html.DisplayFor(modelItem => item.Topic)
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-10 h5">
                            <p class="card-text text-dark">@Html.DisplayFor(modelItem => item.Question)</p>
                        </div>
                        <div class="col-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success text-white"> Answer </a>
                        </div>
                    </div>
                </div>
            </div>
        </li>

    }
</ul> 
