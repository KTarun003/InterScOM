@model InterScOM.Models.LogIn

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

@if (SignInManager.IsSignedIn(User))
{
    @*

        Need To Create Partial Views for Different User Roles

    *@

    @if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdminRole")).Succeeded)
    {
        <p>This paragraph is displayed because you fulfilled PolicyName.</p>
        <a class="nav-link text-dark" asp-area="Staff" asp-controller="Applications" asp-action="Dashboard">Staff Dashboard</a>
    }
}
else
{
    <div class="text-center">
        <div class="row">
            <div class="col-md-4">
                <section>
                    <form asp-action="Login">
                        <h4>Use a local account to log in.</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="AppUser.Email"></label>
                            <input asp-for="AppUser.Email" class="form-control" />
                            <span asp-validation-for="AppUser.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RememberMe"></label>
                            <input asp-for="RememberMe" class="form-control" />
                            <span asp-validation-for="RememberMe" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Log in</button>
                        </div>
                    </form>
                </section>
            </div>
            <div class="col-md-6 col-md-offset-2">
                <section>
                    <h4>Default Accounts for Testing Purpose.</h4>
                    <p>
                        <hr />
                        <h5>Admin Account :</h5>
                        <h6>Email : admin@Test.com</h6>
                        <h6>Password : Test@admin1</h6>
                        <hr />
                        <hr />
                        <h5>Staff Account :</h5>
                        <h6>Email : staff@Test.com</h6>
                        <h6>Password : Test@staff1</h6>
                        <hr />
                        <hr />
                        <h5>Parent Account :</h5>
                        <h6>Email : parent@Test.com</h6>
                        <h6>Password : Test@parent1</h6>
                        <hr />
                    </p>
                </section>
            </div>
        </div>
    </div>
}