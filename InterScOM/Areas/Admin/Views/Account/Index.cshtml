@model IEnumerable<Web.Areas.Admin.Models.AppUser>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-10">
            <h1>User Management</h1>
        </div>
        <div class="col-2">
            <a asp-action="Create" class="text-right btn-success p-2 btn">Create New User</a>
        </div>
    </div>
</div>

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-email="@item.Email">Edit</a> |
                <a asp-action="Delete" asp-route-email="@item.Email">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>