@model InterScOM.Areas.Forum.Models.Answer

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Query</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UserName" type="hidden" value="Admin" />
            <input asp-for="QueryId" type="hidden" />
            <div class="form-group">
                <label class="control-label">Answer</label>
                <textarea asp-for="ThreadAnswer" class="form-control">Enter your Answer</textarea>
                <span asp-validation-for="ThreadAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit Answer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
