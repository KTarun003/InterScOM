@model IEnumerable<InterScOM.Areas.Forum.Models.Query>

@{
    ViewData["Title"] = "Index";
}

<h1>Forum</h1>

<p>
    <a class="btn btn-success" asp-action="Create">+ Create New Query</a>
</p>
<ul style="list-style-type:none;">
    @foreach (var item in Model)
    {

        <li  style="padding: 10px">
            <div class="card">
                <div class="card-header">
                  Topic : @Html.DisplayFor(modelItem => item.Topic)
                </div>
                <div class="card-body">
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Question)</p>
                    </a>
                </div>
            </div>
        </li>

    }
</ul> 
