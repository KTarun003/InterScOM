@model InterScOM.Areas.Staff.Models.Dashboard
@{
    ViewData["Title"] = "Dashoard";
}

<!-- My styles Start -->
<style>
    .card-header {
        background-color: #BBADFF;
    }

    .card-body {
        background-color: #DAB6FC;
    }
</style>


<!-- My styles end -->

<div class="container-fluid">

    <br />

    <div class="row">
        <div class="col-md-12 text-center text-uppercase font-weight-bolder" style=" color: #817F82">
            <h2>
                staff Dashboard
            </h2>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-4">
            <div class="card text-center">
                <h5 class="card-header">
                    Total No Of Applications
                </h5>
                <div class="card-body h4">
                    <p class="card-text">
                        @Model.Applications
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <h5 class="card-header" style="background-color: #DAB6FC; ">
                    Total Accepted Applications
                </h5>
                <div class="card-body h4" style="background-color: #BBADFF; ">
                    <p class="card-text">
                        @Model.Accepted
                    </p>
                </div>

            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-dark text-center">
                <h5 class="card-header">
                    Total Rejected Applications
                </h5>
                <div class="card-body h4">
                    <p class="card-text">
                        @Model.Rejected
                    </p>
                </div>

            </div>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-sm-12 ">
            <div class="card text-dark text-center h4">
                <h5 class="card-header text-uppercase h4">
                    Pending Applications
                </h5>
                <div class="card-body ">
                    <table class="table table-borderless " style=" border-collapse: separate;  border-spacing: 0 1em;">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Application Date
                                </th>
                                <th>
                                    Status
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="text-dark">

                            @foreach (var application in Model.PendingApplications)
                            {
                                <tr>
                                    <td>@application.Name</td>
                                    <td>@application.ApplicationDate</td>
                                    <td class="badge badge-warning">@application.Status</td>
                                    <td>
                                        <a class="btn btn-success" asp-controller="Applications" asp-action="Approve" asp-route-id="@application.Id">Approve</a>
                                        <a class="btn btn-danger" asp-controller="Applications" asp-action="Reject" asp-route-id="@application.Id">Reject</a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>

            </div>


        </div>

    </div>
</div>



