@model IEnumerable<Web.Areas.Staff.Models.Application>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12 text-center text-uppercase font-weight-bolder" style=" color: #817F82">
        <h1>
            all applications
        </h1>
    </div>
</div>
<br />
<table class="table">
    <thead style="background-color: #BBADFF;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FathersName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="background-color: #DAB6FC;">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FathersName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm mr-2">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm mr-2">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
